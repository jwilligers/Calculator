    class Fact : Function
    {
        public Fact(Expression _expr)
            : base(_expr)
        {
        }

        public override Complex Value()
        {
            return new Complex(fact(int.Parse(expr.Value().ToString())));
        }
        public int fact(int x)
        {
            int fact = 1;
            int i = 1;
            while (i <= x)
            {
                fact = fact * i;
                i++;

            }
            return fact;
        }

        override public string ToString()
        {
            return "fact(" + expr.ToString() + ")";
        }
    }
